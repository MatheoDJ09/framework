{
    "name": "matheodj/framework",
    "description": "Création d'un framerwork fait à but d´apprentissage de la programmation orientée objet en php",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Cristhian LOPEZ MOSCOSO",
            "email": "matheodj.09@gmail.com"
        }
    ],
    "require": {
        "vlucas/phpdotenv": "^5.4",
        "php-di/php-di": "^6.0",
        "symfony/http-foundation": "^4.4",
        "twig/twig": "^3.4"
    },
    "require-dev": {
        "symfony/var-dumper": "^4.4"
    },


    "scripts": {
        "serve": [
            "php -S localhost:8000 -d display_errors=1 -t public"
        ],
        "cache:clear" :[
            "rm -r var/cache/dev/twig"
        ]
    },
    "config": {
        "process-timeout": 0,
        "optimize-autoloader": true
    }
}
